<div id="products" class="row-cols-1 menu-item">
    <div class="container-products">
        <table class="table table-hover products-list">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Chủ đề</th>
                    <th scope="col">Avatar</th>
                    <th scope="col">Option</th>
                </tr>
                {{#each data}}
            <tbody>
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.tieude}}</td>
                    <td>{{this.tentloai}}</td>
                    <td>{{this.hinh}}</td>
                    <td>
                        <a href="/admin/suabaiviet?id={{this.id}}">Sửa</a>
                        <a href="/admin/delete?id={{this.id}}">               
                            <form  method="post" action="/admin/delete?id={{this.id}}&_method=DELETE">
                              <input type="submit" value="Xóa">
                            </form>
                       </a>
                    </td>
                </tr>
            </tbody>

            {{/each}}


            </thead>

        </table>
        <a href="/logout">Logout</a>
    </div>
</div>





