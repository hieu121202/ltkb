<div id="content">
            <div class="content-section clear">
                <div class="posts">
                    <div class="grid-sizer"></div>
                    <!-- post1 -->
                    {{#each data}}
                    <div class="post-container">
                        <article class="post clear">
                            <div class="post-header">
                                <h1 class="post-title entry-title">
                                    <a href="/{{this.id}}">{{this.tieude}}</a>
                                </h1>
                            </div>

                            <div class="featured-media">
                                <a href="/{{this.id}}">
                                    <img class="img featured" width="400" height="600" src="{{this.hinh}}">
                                </a>
                            </div>

                            <div class="post-content clear">
                                <p>
                                    {{this.trichdan}}
                                    <a class="more-link" href="/{{this.id}}">Continue Reading →</a>
                                </p>
                            </div>
                            
                            <div class="post-meta clear">
                                <time class="updated">
                                    <a class="post-date" href="page1.html" title="Book Exchange Trở Lại Mùa Thứ 10">
                                        <i class="fa-solid fa-clock"></i>
                                        February 8, 2021
                                    </a>
                                    <a class="post-comment" href="page1.html#card">
                                        <i class="fa-solid fa-comment"></i>
                                        0
                                    </a>
                                </time>
                            </div>
                        </article>
                    </div>
                    {{/each}}

                </div>
            </div>
    </div>















